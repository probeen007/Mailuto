# Copy this file to .env.local and fill in your actual values

# MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/mailuto?retryWrites=true&w=majority

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate-with-openssl-rand-base64-32

# Google OAuth
# Get these from https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# Resend Email API
# Get this from https://resend.com/
RESEND_API_KEY=re_your_resend_api_key_here
FROM_EMAIL=noreply@yourdomain.com

# Optional: Cron Job Secret (for production security)
CRON_SECRET=your-random-secret-for-cron-jobs
